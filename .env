# Django secret key
DJANGO_SECRET_KEY=your-secret-key

# Debug mode (True/False)
DJANGO_DEBUG=False

# Allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database settings (PostgreSQL example)
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=your_db_name
DJANGO_DB_USER=your_db_user
DJANGO_DB_PASSWORD=your_db_password
DJANGO_DB_HOST=localhost
DJANGO_DB_PORT=5432

# Static and media root (optional, for production)
DJANGO_STATIC_ROOT=/path/to/staticfiles
DJANGO_MEDIA_ROOT=/path/to/media